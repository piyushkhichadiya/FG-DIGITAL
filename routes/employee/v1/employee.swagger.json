                        "description": "Enter project ID",
                        "required": true,
                        "type": "string",
                        "example": "93492065515",
                        "schema": {
                            "example": "93492065515"
                        }
                    },
                    {
                        "name": "type",
                        "in": "formData",
                        "description": "Enter type of service",
                        "required": true,
                        "type": "string",
                        "example": "activity",
                        "schema": {
                            "example": "activity"
                        }
                    },
                    {
                        "name": "title",
                        "in": "formData",
                        "description": "Enter Title of activity",
                        "required": true,
                        "type": "string",
                        "example": "activity title",
                        "schema": {
                            "example": "test activity title"
                        }
                    },
                    {
                        "name": "description",
                        "in": "formData",
                        "description": "Enter Description of activity",
                        "required": false,
                        "type": "string",
                        "example": "description",
                        "schema": {
                            "example": "test description title"
                        }
                    },
                    {
                        "name": "date",
                        "in": "formData",
                        "description": "Enter date of activity",
                        "required": false,
                        "type": "string",
                        "example": "date",
                        "schema": {
                            "example": "23/05/2009"
                        }
                    },
                    {
                        "name": "service_id",
                        "in": "formData",
                        "description": "Enter service_id of activity (if type is service)",
                        "required": false,
                        "type": "string",
                        "example": "service_id",
                        "schema": {
                            "example": "371889110187"
                        }
                    },
                    {
                        "name": "criteria",
                        "in": "formData",
                        "description": "Enter criteria - JSON Object only (if type is service)",
                        "required": false,
                        "type": "string",
                        "example": "criteria",
                        "schema": {
                            "example": {
                                "0": { "criteria_id": 390441675983, "value": 50 },
                                "1": { "criteria_id": 1386407953254, "value": 55 },
                                "2": { "criteria_id": 547034266151, "value": 55 }
                            }
                        }
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "description": "file to upload",
                        "required": false,
                        "type": "file"
                    }
                ],
                "responses": {}
            }
        },
